<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Notesome.Views.ItemDetailPage"
             BackgroundColor="#191c19" 
             Title="{Binding Titulo}">

    <StackLayout Spacing="20" Padding="15">
        <Label Text="Titulo de la Nota:" FontSize="Medium" TextColor="White" FontAttributes="Bold" />
        <Label Text="{Binding Titulo}" FontSize="Small" TextColor="White" />
        <Label Text="Contenido de la Nota:" FontSize="Medium" TextColor="White" FontAttributes="Bold" />
        <Label Text="{Binding Descripcion}" FontSize="Small" TextColor="White" />
    </StackLayout>

</ContentPage>
